# Application settings
PORT=3000
PUBLIC_BASE_URL=http://localhost:3000

# Admin authentication (SHA-256 hash of the password)
# Generate hash with: echo -n "your-password" | shasum -a 256
ADMIN_PASSWORD_HASH=your-sha256-hash-here

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/secretsanta

# Email configuration
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=user
MAIL_PASSWORD=password
MAIL_FROM=noreply@wichtel.example.com

# Debug mode: if set, all emails will be sent to this address instead of actual recipients
# Leave empty to send to actual recipients
MAIL_DEBUG_MAIL_ADDRESS=
